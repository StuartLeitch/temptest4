{
  "compileOnSave": false,
  "ts-node": {
    // these options are overrides used only by ts-node
    // same as our --compilerOptions flag and our TS_NODE_COMPILER_OPTIONS environment variable
    "compilerOptions": {
      "esModuleInterop": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "skipLibCheck": true
    }
  },
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "downlevelIteration": true,
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@env/*": ["apps/invoicing-graphql/src/environments/*"],
      "@hindawi/shared": ["libs/shared/src/index.ts"],
      "@hindawi/react-components": ["libs/react-components/src/index.ts"],
      "@hindawi/invoicing-web/*": ["apps/invoicing-web/src/*"],
      "@hindawi/reporting-backend/*": ["apps/reporting-backend/src/*"],
      "@hindawi/invoicing-graphql/*": ["apps/invoicing-graphql/src/*"],
      "@hindawi/eve": ["libs/eve/src/index.ts"],
      "@hindawi/infrastructure": [
        "libs/shared/src/lib/infrastructure/index.ts"
      ],
      "@hindawi/domain": ["libs/shared/src/lib/domain/index.ts"],
      "@utils": ["libs/shared/src/lib/utils/index.ts"],
      "@hindawi/sisif": ["libs/sisif/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist", "coverage", "report"]
}
